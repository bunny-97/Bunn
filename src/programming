#include <stdio.h>

int main(void) {

    // 변수 선언
    char name1[10], name2[10], name3[10];
    int age1, age2, age3;
    float height1, height2, height3;

    // 개인정보 입력 받기
    printf("1번째 사람의 이름, 나이, 키를 입력하세요.:");
    scanf("%s", name1);
    scanf("%d", &age1);
    scanf("%f", &height1);
    printf("2번째 사람의 이름, 나이, 키를 입력하세요.:");
    scanf("%s", name2);
    scanf("%d", &age2);
    scanf("%f", &height2);
    printf("3번째 사람의 이름, 나이, 키를 입력하세요.:");
    scanf("%s", name3);
    scanf("%d", &age3);
    scanf("%f", &height3);

    // 평균 키 계산
    float aver_age = (age1+age2+age3)/3.0;
    float aver_height = (height1+height2+height3)/3.0;

    printf("평균 나이: %.2f\n",aver_age );
    printf("평균 키: %.2f\n",aver_height );

    printf("평균 나이보다 많은 사람: ");
    if (age1 > aver_age) printf("%s ", name1);
    if (age2 > aver_age) printf("%s ", name2);
    if (age3 > aver_age) printf("%s ", name3);
    printf("\n");

    printf("평균 키보다 큰 사람: ");
    if (height1 > aver_height) printf("%s ", name1);
    if (height2 > aver_height) printf("%s ", name2);
    if (height3 > aver_height) printf("%s ", name3);
    printf("\n");

    return 0;
}

